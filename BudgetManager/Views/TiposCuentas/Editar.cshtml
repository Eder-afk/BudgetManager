@model TipoCuenta

@{
    ViewData["Title"] = "Editar Tipos Cuenta";
}

<h1>Editar Tipo Cuenta: @Model.Nombre</h1>

<form asp-controller="TiposCuentas" asp-action="Editar">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nombre"></label>
        <input type="text" asp-for="Nombre" autocomplete="off" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a class="btn btn-secondary" asp-controller="TiposCuentas" asp-action="Index">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}