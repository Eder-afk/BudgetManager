@model TipoCuenta

@{
	ViewData["Title"] = "Tipos Cuentas";
}

<h1>Crear Tipo de Cuenta</h1>
<h5>Ejemplos: Préstamos, tarjetas de crédito, cuentas bancarías, etc.</h5>

<div asp-validation-summary="ModelOnly" class="text-danger">

</div>

<form asp-controller="TiposCuentas" asp-action="Crear">
	<div class="mb-3">
		<label asp-for="Nombre" class="form-label"></label>
		<input type="text" asp-for="Nombre" class="form-control" autocomplete="off"/>
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}